<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--ip-->
        <EditText
            android:id="@+id/mIpEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter IP address"
            android:text="192.168.100.107" />
        <!--port-->
        <EditText
            android:id="@+id/mPortEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="default:1448(can be empty)" />
        <!--connect Btn-->
        <Button
            android:id="@+id/mConnectBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="connect" />
    </LinearLayout>

    <TextView
        android:id="@+id/mIpAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center"
        tools:text="ip" />

    <TextView
        android:id="@+id/mReceiveMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        tools:text="ip" />

</LinearLayout>